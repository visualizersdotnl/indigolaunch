
Texture2D g_texture : register(t0);
SamplerState g_sampler : register(s0);

struct VS_OUTPUT
{
	float4 screenPos : SV_POSITION;
	float4 color : COLOR0;
	float2 UV : TEXCOORD0;
};

float4 main(in VS_OUTPUT input) : SV_TARGET
{
	return input.color*g_texture.Sample(g_sampler, input.UV);
}
